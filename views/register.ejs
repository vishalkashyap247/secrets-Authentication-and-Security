<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div><br>
            <p>Already have an account?&nbsp;<a href="https://secrets-authentication.onrender.com/login">Login here</a></p>

            <button class="btn btn-dark">Register</button>
            <!-- <p class="signup-para">Please signup via Google, soon Register service will run again</p> -->

          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body center">
          <p class="imp">Google</p>
          <a class="btn btn-block google-sign center" href="/auth/google" role="button">
            <img src="data:image/svg+xml;base64," alt="Google">
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
